{
  "name": "github-rank-in-dimigo",
  "private": true,
  "version": "1.0.0",
  "repository": "https://github.com/junhoyeo/github-rank-in-dimigo.git",
  "author": "JunhoYeo <hanaro0704@gmail.com>",
  "scripts": {
    "build": "rm -rf dist && tsc && cp ./ALLOWLIST ./dist && cp -R public ./dist",
    "start": "node dist/index.js",
    "test": "jest",
    "deploy": "gh-pages -d public/build"
  },
  "dependencies": {
    "axios": "^0.21.2",
    "cheerio": "^1.0.0-rc.10",
    "ejs": "^3.1.6",
    "gh-pages": "^3.2.3",
    "lowdb": "^1.0.0",
    "moment": "^2.29.1"
  },
  "devDependencies": {
    "@types/cheerio": "^0.22.30",
    "@types/ejs": "^3.0.7",
    "@types/jest": "^28.1.6",
    "jest": "^26.6.3",
    "ts-jest": "^26.5.6",
    "typescript": "^4.3.5"
  },
  "jest": {
    "moduleDirectories": [
      "node_modules"
    ],
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "\\.ts?$": "ts-jest",
      "\\.js?$": "babel-jest"
    },
    "testRegex": "(\\.|/)(test|spec)\\.(jsx?|tsx?)$",
    "globals": {
      "ts-jest": {
        "enableTsDiagnostics": true
      }
    },
    "testEnvironment": "node"
  }
}
